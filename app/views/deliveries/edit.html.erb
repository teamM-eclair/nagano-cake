<%= render 'layouts/errors', obj: @delivery %>

<!--ヘッダー追記-->

<div class='container px-5 px-sm-0'>
    <div class='row'>
      <h2>配送先編集</h2>
    </div>
    <div class="row">
        <%= form_with model:@delivery, url: edit_delivery_path, local:true do |f| %>
          <div class="form-group">
              <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
              <%= f.text_field :postcode %>
          </div>
          <div class="form-group">
              <%= f.label :address, "住所" %>
              <%= f.text_field :address %>
          </div>
          <div class="form-group">
              <%= f.label :name, "宛名" %>
              <%= f.text_field :name %>
          </div>
          <div class="form-group">
              <%= f.submit '変更内容を保存', class: "btn btn-success" %>
          </div>
         <% end %>
    </div>