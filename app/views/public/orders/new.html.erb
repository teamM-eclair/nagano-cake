<!-- 会員のヘッダー -->

<h2>注文情報入力<h2>
<p><strong>支払方法</strong><p>
  <%= form_with model:@order, url: confirm_public_orders_path do |f| %>
    <!-- Orderモデルに定義した数値に対応した文字列の呼び出し(なぽ) -->
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <!-- config/locales/ja.ymlに定義した英語に対応した日本語の呼び出し(なぽ)-->
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %><br>
    
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
    
  <p><strong>お届け先</strong><p>
    <%= f.radio_button :shipping_address, "0" %>
    <%= f.label :address, "ご自身の住所" %><br>
    <%= @customer.postcode %>
    <%= @customer.address %><br>
    <%= @customer.last_name %>
    <%= @customer.first_name %><br>
    
    <%= f.radio_button :shipping_address, "1" %>
    <%= f.label :address, "登録済みの住所" %><br>
      <%= f.select :address_id, options_from_collection_for_select(@delivery, :id, :address_display) %><br>
    
    <%= f.radio_button :shipping_address, "3" %>
    <%= f.label :address, "新しいお届け先" %><br>
      <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
      <%= f.text_field :postcode %><br>
        
      <%= f.label :address, "住所" %>
      <%= f.text_field :address %><br>
      
      <%= f.label :name, "宛名" %>
      <%= f.text_field :name %><br>
      
    <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
      
  <% end %>