<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <h4 class="bg-secondary text-white d-inline px-4">注文履歴一覧</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-12 offset-1">
      <table class="table table-borderd">
        <thead class="table-secondary">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y年%m月%d日') %></td>
              <td>
                〒<%= order.postcode %><br>
                <%= order.address %><br>
                <%= order.name %> 様
              </td>
              <td>
                <%= order.items.each do |item| %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= addTax(order.items.sum(:unit_price)) %>円</td>
              <td><%= link_to public_orders_path(order), class: "btn btn-info" do %>表示する<% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
