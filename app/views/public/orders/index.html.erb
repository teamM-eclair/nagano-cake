<!--ヘッダー追記-->

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h4>注文履歴一覧</h4>
  </div>

    <table class="table table-borderd">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y年%m月%d日') %></td>
            <td>
              <%= order.postcode %><br>
              <%= order.address %><br>
              <%= order.name %> 様
            </td>
            <td>
            <%# @total = 0 %>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
            <% @total += order_detail. %>
            <% end %>
            </td>
            <td><%#= 800 + @total %>円</td>
            <td></td>
            <td><%= link_to public_order_path(order.id), class: "btn btn-success" do %>表示する
                <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>