<h1>注文情報確認</h1>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <table class='table table-hover table-inverse'>
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価(税込)</th>
                        <th>数量</th>
                        <th>小計</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <%= @cart_items.each do |item| %>
                            <td>
                                <%= image_tag cart_item.item.get_image, size:"20x20" %>
                                <%= cart_item.item.name %>
                            </td>
                            <td><%= item.unit_price %></td>
                            <td><%= item.amount %></td>
                            <td><%= @price %></td>
                        <%= end %>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-3 offset-md-1">
            <table>
                <tbody>
                    <tr>
                        <td>送料</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>商品合計</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>請求金額</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <h3>支払方法</h3>
            <%= Order.payment_method_i18n[:credit_card] %>
        <h3>お届け先</h3>
    </div>
</div>