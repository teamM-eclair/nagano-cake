<!--商品詳細画面-->
  <%= image_tag @item.item.get_image(width, height) %>
  <h3><strong><%= @item.name %></strong></h3>
  <p><%= @item.detail %></p>
  <p><%= @item.unit_price %></p>

  <%= form_with model:cart_item,local:true do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    <!--セレクトボックス-->
    <%= f.select :amount, *[1..5] %>
    <%= f.submit 'カートに入れる', class: "btn btn-sm btn-success" %>
  <% end %>

