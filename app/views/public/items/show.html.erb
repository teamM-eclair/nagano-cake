<!--商品詳細画面-->
  <%= image_tag @item.get_image(100, 100) %>
  <h3><strong><%= @item.name %></strong></h3>
  <p><%= @item.detail %></p>
  <p><%= @item.unit_price.to_s(:delimited) %></p>

  <%= form_with model:@cart_item,local:true do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>
    
    <!--セレクトボックス-->
    <%= f.select :amount, *[1..5] %>
    <%# if customer_signed_in? && current_customer.id == customer.id %>
      <%= f.submit 'カートに入れる', class: "btn btn-sm btn-success" %>
    <%#end %>
  <% end %>

