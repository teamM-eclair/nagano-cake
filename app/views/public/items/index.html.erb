<div class='container px-5 px-sm-0 '>
  <div class='row'>
    <div class="col-8 offset-2">
      <h4 class="bg-secondary text-white d-inline px-4">商品一覧</h4>
    </div>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-2">
        <%= link_to public_item_path(item.id) do %>
          <%= image_tag item.get_image(100,100) %>
          <p class="my-3"><%= item.name %></p>
        <% end %>
        <p><%= "¥" %><%= item.unit_price.to_s(:delimited) %></p>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="kaminari, mx-auto">
    <%= paginate(@item_pages) %>
    </div>
  </div>
</div>
