<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <h4 class="bg-secondary text-white d-inline px-4">会員情報編集</h4>
    </div>
    <div class="col-10 offset-1">
      <table class="table my-5">
        <tbody>
          <%= render 'layouts/errors', obj: @customer %>
          <%= form_with model:@customer, url: public_customer_path(current_customer), local:true do |f| %>
          <tr>
            <td><%= f.label :name, "名前" %></td>
            <td>
              <%= "(姓)" %><%= f.text_field :last_name, autofocus: true %>
              <%= "(名)" %><%= f.text_field :first_name %>
            </td>
           <tr></tr>
            <td><%= f.label :name_kana, "フリガナ" %></td>
            <td>
              <%= "(セイ)" %><%= f.text_field :last_name_kana %>
              <%= "(メイ)" %><%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr>
           <td><%= f.label :postcode, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postcode %></td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
            <td><%= f.telephone_field :phone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "編集内容を保存する", class: "btn btn-success mx-3 px-5"  %>
              <%= link_to '退会する', quit_public_customers_path, class: "btn btn-danger mx-3 px-5" %></td>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>