<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h4 class="bg-info text-white d-inline px-4">注文履歴詳細</h4>
    </div>
    <div class="col-md-8 offset-md-2">
      <table class="table my-5">
        <tr><strong>購入者</strong></tr>
          <td>
            <%= link_to admin_customers_path(@order.customer) do %>
            <%= order.customer.name %>
            <% end %>
          </td>
        <tr><strong>注文日</strong></tr>
          <td><%= order[:created_at].strftime("%Y-%m-%d") %></td>
        <tr><strong>配送先</strong></tr>
          <td><%= order.customer.order_detail %></td>
        <tr><strong>支払方法</strong></tr>
          <%= order.customer.status %>
        <tr><strong> 注文ステータス</strong></tr>
        <!--注文ステータス セレクトボックス-->
        <td>
          <%= form_with model:order, local:true do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert %>
          <%= f.submit '更新', class: "btn btn-sm btn-success" %>
          <% end %>
        </td>
      </table>
    </div>
  </div>
</div>

    <!--半分から下の表部分-->
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <!--<table  table border="0" style='table table-hover table-inverse'>-->
      <div class="table my-5">
        <table class='table table-hover table-inverse my-5'>
          <thead class="table-info">
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= form_with model:order_detail, local:true do |f| %>
              <%= f.fields_for :order_detail do |o| %>
                <% @order_detail.items.each do |item| %>
                  <tr>
                    <td><%= item.name %></td>
                    <td><%= item.unit_price %></td>
                    <td><%= item.amount %></td>
                    <td><%= item.with_tax_price %></td>
                    <!--製作ステータス セレクトボックス-->
                    <td><%= o.select :product_status, Order_detail.product_statuses_i18n.invert %></td>
                    <td><%= o.submit '更新', class: "btn btn-sm btn-success" %></td>
                  </tr>
                <% end %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
  <div class="container">
    <div class="row-pull-right">
      <div class="col-md-3 offset-md-8">
        <table class="table table-striped">
          <tr><strong>商品合計</strong></tr>
            <td><%= subtotal(@cart_items.sum(:with_tax_price)) %>円</td>
          <tr><strong>送料</strong></tr>
            <td><%= @order.shipping_fee %>円</td>
          <tr><strong>請求金額合計</strong></tr>
            <td><strong><%= subtotal(@cart_items.sum(:with_tax_price)) + @order.shipping_fee %>円</strong></td>
        </table>
      </div>
    </div>
  </div>
