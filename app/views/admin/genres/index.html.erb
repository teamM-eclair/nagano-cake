<h1>ジャンル一覧・追加</h1>
<!--新規登録フォーム-->
<%= form_with model:@genre, local:true do |f| %>
  <%= f.label :ジャンル名 %>
  <%= f.text_field :neme %>
  <%= f.submit "新規登録", class: "btn btn-success" %>
<% end %>

<!--ジャンル一覧表部分-->
<table  table border="0" style='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(@genre), class: "btn btn-sm btn-success edit_genle_#{@genle.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
