<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <h4 class="bg-info text-white d-inline px-4">ジャンル一覧・追加</h4>
<!--新規登録フォーム-->
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
        <div class="form-group my-5">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :neme %>
          <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-1">
      <table class="table table-hover table-inverse my-5">
        <thead class="table-info">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success edit_genre_#{genre.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
