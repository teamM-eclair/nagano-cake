<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
			<h4 class="bg-info text-white d-inline px-4">商品詳細</4>
		</div>
	</div>
	 <div class="row">
    <div class="col-3 offset-1 my-3">
			<%= image_tag @item.get_image(200,200) %>
		</div>
		<div class="col-7 offset-1">
			<table class="table table-borderless">
			  <tr>
					<th>商品名</th>
					<td><%= @item.name %></td>
			  </tr>
			  <tr>
					<th>商品説明</th>
					<td><%= @item.detail %></td>
			  </tr>
			  <tr>
			    <th>ジャンル</th>
					<td><%= @item.genre.name %></td>
			  </tr>
			  <tr>
		      <th>
		      	税込価格<br>
		      	（税抜価格）
		      </th>
					<td>
						<%= @item.with_tax_price.to_s(:delimited) %> (<%= @item.unit_price.to_s(:delimited) %>) 円
					</td>
			  </tr>
			  <tr>
			    <th>販売ステータス</th>
					<td class="text-success"><%= Item.sales_statuses_i18n[@item.sales_status] %></td>
			  </tr>
		  </table>
	  <%= link_to edit_admin_item_path(@item.id) do%>
		 	<label class="btn btn-success btn-lg">編集する</label>
	  <% end %>
	</div>
</div>