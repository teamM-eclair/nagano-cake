<h1>商品編集</h1>
<%= form_with model:@item, url: admin_item_path, local:true do |f| %>

<div>
  <%= f.label :image, "商品画像", class: "col-sm-3 control-label" %>
  <%= f.file_field :image, placeholder: "画像", accept: "image/*" %>
  <%#= f.file_field :image, class: "image" %>
</div>

<div class="form-group">
  <%= f.label :"商品名", class: "col-sm-3 control-label" %>
  <%= f.text_field :name, class: "col-sm-9 form-control-static name" %>
</div>
<div class="form-group">
  <%= f.label :"商品説明", class: "col-sm-3 control-label" %>
  <%= f.text_area :detail, class: "col-sm-9 control-label explanation" %>
</div>

<div class>
  <%= f.label :"ジャンル", class: "col-sm-3 control-label" %>
  <%= f.select :genre_id, options_from_collection_for_select(@genre, :id, :name) %><br>
  <%#= f.collection_select(:genre_id,:id, :name, prompt: "-- 選択してください --", class: "col-sm-9 genre_id") %>
</div>

<div>
  <%= f.label :"税込み価格", class: "col-sm-3 control-label" %>
  <%= f.text_field :unit_price, class: "col-sm-3 form-control-static unit_price" %>円
</div>

<div>
  <%= f.label :"販売ステータス", class: "col-sm-3 control-label" %>
  <%= f.radio_button :sales_status, "sale" %>
  <%= f.label :sales_status, "販売中" %>
  <%= f.radio_button :sales_status, "sold" %>
  <%= f.label :sales_status, "販売停止中" %>
</div>

<%= f.submit "変更を保存", class: "btn btn-success pull-right" %>
<% end %>
