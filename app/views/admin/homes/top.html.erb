<h1>注文履歴一覧</h1>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-7">
    <table table border="0" style='table table-hover table-inverse'>
          <thead>
            <tr>
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= link_to order[:created_at].strftime("%Y-%m-%d %H:%M"), admin_order_path(order) %></td>
                <td><%= order.customer.name %></td>
                <!--注文した数量の合計数はどうやってここに出す？-->
                <td><%= order.customer.amount %></td>
                <td><%= order.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="col-lg-3"></div>
      </div>
    </div>
  </div>
<%= paginate(@order_pages) %>
