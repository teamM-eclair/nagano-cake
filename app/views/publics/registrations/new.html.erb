<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <h4 class="bg-secondary text-white d-inline px-4">新規会員登録</h4>
    </div>
    <div class="col-8 offset-2">
      <table class="table table-borderless my-5">
        <tbody>
          <%= form_with model:@customer, url: customer_registration_path do |f| %>
          <%= render "layouts/errors", obj: @customer %>
            <tr>
              <td><%= f.label :name, "名前" %></td>
              <td><%= "(姓)" %><%= f.text_field :last_name, autofocus: true %></td>
              <td><%= "(名)" %><%= f.text_field :first_name %></td>
            </tr>
            <tr>
              <td><%= f.label :name_kana, "フリガナ" %></td>
              <td><%= "(セイ)" %><%= f.text_field :last_name_kana %></td>
              <td><%= "(メイ)" %><%= f.text_field :first_name_kana %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :postcode, "郵便番号(ハイフンなし)" %></td>
              <td><%= f.text_field :postcode %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
              <td><%= f.telephone_field :phone_number %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード(6文字以上)" %></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "新規登録", class: "btn btn-success mx-2 px-5" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-8 offset-2">
      <h4 class="bg-secondary text-white d-inline px-4">既に登録済みの方</h4>
      <p class="ml-5 my-3"><%= link_to "こちら",new_customer_session_path, class: "mx-3" %>からログインしてください。</p>
    </div>
  </div>
</div>