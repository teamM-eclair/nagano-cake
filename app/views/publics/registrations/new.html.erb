<h2>新規会員登録</h2>
<%= form_with model:@customer, url: customer_registration_path do |f| %>
   <%= render "layouts/errors", obj: @customer %>

    <%= f.label :name, "名前" %>
    <%= "(姓)" %><%= f.text_field :last_name, autofocus: true %>
    <%= "(名)" %><%= f.text_field :first_name %><br>
    <%= f.label :name_kana, "フリガナ" %>
    <%= "(セイ)" %><%= f.text_field :last_name_kana %>
    <%= "(メイ)" %><%= f.text_field :first_name_kana %><br>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %><br>
    <%= f.label :postcode, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postcode %><br>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address %><br>
    <%= f.label :phone_number, "電話番号(ハイフンなし)" %>
    <%= f.telephone_field :phone_number %><br>
    <%= f.label :password, "パスワード(6文字以上)" %>
    <%= f.password_field :password, autocomplete: "new-password" %><br>
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br>
    <%= f.submit "新規登録" %>
<% end %>
<h2>既に登録済みの方</h2>
<p><%= link_to "こちら",new_customer_session_path %>からログインしてください。</p>