<h1>ショッピングカート</h1>
<td><%= link_to 'カートを空にする', method: :delete, data: { confirm: '本当にカートを全て空にしますか？' }, class: "btn btn-sm btn-danger" %></td>
<table>
  <thead><!-- <tr></tr>必要では？ -->
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>

  <tbody>
   <% @total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(100,100) %>
          <%= cart_item.item.name %>
          <%#= f.hidden_field :name, :value => cart_item.item.name %>
        </td>
        <!--単価（税込）-->
        <td>
          <%= cart_item.item.with_tax_price.to_s(:delimited) %>
          <%#= f.hidden_field :with_tax_price, :value => cart_item.item.with_tax_price %>
        </td>
        <!--数量-->
        <td>
        <%= form_with model: cart_item, local:true do |f| %>
            <%= f.select :amount, *[1..5] %>
            <%= f.submit '変更', class: "btn btn-sm btn-success" %>
        <% end %>
        </td>
        <!--小計 -->
        <td>
          <%= cart_item.subtotal.to_s(:delimited) %>
        </td>
        <!--削除ボタン-->
        <td><%= link_to '削除する', cart_item_path(cart_item.id), method: :delete, class: "btn btn-sm btn-danger" %></td>
        <!--合計金額をインスタンス変数（@total）に入れてます-->
        <% @total += cart_item.subtotal %>
    <% end %>
      </tr>

  </tbody>
</table>
<%= link_to '買い物を続ける', public_items_path(@customer) %>
<table>
  <thead>
    <th>合計金額</th>
  </thead>
  <tbody>
    <!--ここで合計金額を表示させます-->
    <td><%= @total.to_s(:delimited) %></td>
  </tbody>
</table>
