<h1>ショッピングカート</h1>
<td><%= link_to 'カートを空にする', method: :delete, data: {'本当にカートを全て空にしますか？' } %></td>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
    <% @cart_item.each do |cart_item| %>
      <tr>
        <td>
          <%= cart_item.item.get_image(width, height) %>
          <%= cart_item.item.item_name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <%= form_with model:cart_item,local:true do |f| %>
            <%= f.hidden_field :amount, :value => cart_item.amount %>
            <%= f.select :amount, *[1..5] %>
            <%= f.submit '変更' %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to '削除する', @cart_item, method: :destroy %></td>
        <% @total += cart_item.subtotal %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '買い物を続ける', public_items_path(@customer) %>
<table>
  <thead>
    <th>合計金額</th>
  </thead>
  <tbody>
    <td><%= @total %></td>
  </tbody>
</table>
